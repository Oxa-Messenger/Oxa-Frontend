{
	"$schema": "./local-schema/package.schema.json",
	"name": "oxa",
	"main": "expo-router/entry",
	"version": "1.3.0",
	"scripts": {
		"start": "expo start",
		"android": "expo run:android",
		"android:optimized": "npx expo run:android --variant debugOptimized",
		"ios": "expo run:ios",
		"lint": "expo lint",
		"apk:release": "powershell -ExecutionPolicy Bypass -File ./scripts/build-release.ps1",
		"apk:release-fast": "powershell -ExecutionPolicy Bypass -File ./scripts/build-release-fast.ps1",
		"apk:release-main": "cd android && gradlew.bat clean assembleRelease && cd .. && adb install -r android/app/build/outputs/apk/release/app-release.apk",
		"install-debugOptimized-apk-x86": "adb install -r ./android/app/build/outputs/apk/debugOptimized/app-x86_64-debugOptimized.apk",
		"install-debugOptimized-apk-arm64": "adb install -r ./android/app/build/outputs/apk/debugOptimized/app-arm64-v8a-debugOptimized.apk",
		"install-release-apk-x86": "adb install -r ./android/app/build/outputs/apk/release/app-x86_64-release.apk",
		"install-release-apk-arm64": "adb install -r ./android/app/build/outputs/apk/release/app-arm64-v8a-release.apk",
		"graphtree": "node generate_graph_tree.js"
	},
	"dependencies": {
		"@config-plugins/react-native-webrtc": "^13.0.0",
		"@expo/vector-icons": "^15.0.3",
		"axios": "^1.13.2",
		"babel-plugin-module-resolver": "^5.0.2",
		"expo": "~54.0.33",
		"expo-av": "^16.0.8",
		"expo-build-properties": "~1.0.10",
		"expo-camera": "^17.0.10",
		"expo-constants": "~18.0.13",
		"expo-dev-client": "~6.0.20",
		"expo-font": "^14.0.10",
		"expo-linking": "~8.0.11",
		"expo-router": "~6.0.23",
		"expo-screen-capture": "^8.0.9",
		"expo-secure-store": "^15.0.8",
		"expo-splash-screen": "^31.0.13",
		"expo-system-ui": "~6.0.9",
		"expo-updates": "~29.0.16",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-hook-form": "^7.69.0",
		"react-native": "0.81.5",
		"react-native-safe-area-context": "~5.6.0",
		"react-native-screens": "~4.16.0",
		"react-native-toast-message": "^2.3.3",
		"react-native-webrtc": "^124.0.7",
		"socket.io-client": "^4.8.3"
	},
	"private": true,
	"devDependencies": {
		"@mermaid-js/mermaid-cli": "^11.12.0",
		"@types/react": "~19.1.10",
		"eslint": "^9.39.2",
		"eslint-config-expo": "~10.0.0",
		"madge": "^8.0.0",
		"typescript": "~5.9.2"
	}
}
